<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#E8E4D9">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/tv_show_noWords"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#ff0000"
            android:visibility="visible"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="您已学完我们所有单词，请耐心等待我们添加"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_words_main_show"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/rl_words_home"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/home_words"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_need_lean"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:textColor="#B7B1A3"
                android:text="需新学:0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_need_review"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:textColor="#B7B1A3"
                android:text="需复习:0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:id="@+id/rl_words_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/detail_words">
            <TextView
                android:lines="1"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:text="がくせい（学生）〔名〕（大）学生"
                android:layout_centerVertical="true"
                android:id="@+id/tv_word_beforeWords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_words_main_show"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:visibility="visible"
            android:id="@+id/tv_words_show"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:text="あい"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/rl_sentence_show"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/tv_words_show"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_sentence_show"
                android:textSize="20sp"
                android:text="わたしは"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_words_show_one"
            android:visibility="gone"
            android:layout_below="@+id/tv_words_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginTop="20dp"
                android:background="#D9D5CA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/ll_one_japan"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="sdasdasd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ll_one_Chinese"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="中文"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_words_show_two"
            android:visibility="gone"
            android:layout_below="@+id/tv_words_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/ll_two_mean"
                android:layout_gravity="center"
                android:text="词义"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/ll_two_name"
                android:layout_gravity="center"
                android:text="词性"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_words_show_three"
            android:visibility="gone"
            android:layout_below="@+id/tv_words_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:text="布局三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:id="@+id/rv_word"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="7"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp">
    </android.support.v7.widget.RecyclerView>
    <GridView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:id="@+id/gv_words"
        android:layout_weight="7"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </GridView>

    <RelativeLayout
        android:background="#E8E4D9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rl_words_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape_gray"
            android:text="提示"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <RelativeLayout
            android:id="@+id/rl_words_voice"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_gray_two">
            <com.example.yuanren123.jinchuan.view.MyGifView
                android:layout_marginRight="3dp"
                android:visibility="gone"
                android:id="@+id/gv_word_voice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_word_voice"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/horn_words"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>